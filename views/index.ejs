<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Swiper demo</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <!-- Link Swiper's CSS -->
    <link rel="stylesheet" href="/libs/swaper/css/swiper.min.css">
	<link rel="stylesheet" href="/stylesheets/animations.css">
    <!-- Demo styles -->
    <style>
    html, body {
        position: relative;
        height: 100%;
        font-size: 14px;
    }
    body {
        background: #eee;
        font-family: Helvetica Neue, Helvetica, Arial, sans-serif;
        font-size: 1rem;
        color:#000;
        margin: 0;
        padding: 0;
    }
    .swiper-container {
        width: 100%;
        height: 100%;
        margin-left: auto;
        margin-right: auto;
    }
    .swiper-slide {
        text-align: center;
        font-size: 1.3rem;
        background: #fff;
        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }
    
    .left-o{
    	width: 15.156249999999998%;
		height: 81.94444444444444%;
		left: -6.875000000000001%;
		top: 8.333333333333332%;
		z-index: 0;
		position: absolute;
		display: none;
    }
    .swiper-slide-active .left-o{
    	-webkit-animation: fadeInRight 1s 0.5s 1 both;
		-moz-animation: fadeInRight 1s 0.5s 1 both;
		animation: fadeInRight 1s 0.5s 1 both;
		display: block;
    }
	.swiper-slide-active .first-main-img-div-animation{
			-webkit-animation: page-1-in 1s 1s 1 both;
		    -moz-animation: page-1-in 1s 1s 1 both;
		    animation: page-1-in 1s 1s 1 both;
	}
  	div.first-main-img-div{
  		    width: 100%;
		    height: 82.14285714285714%;
		    left: 0%;
		    top: 0%;
		    z-index: 0;
		    
		    position: absolute;
  	}
  	div.first-main-img-cover-div{
  		 	width: 100%;
		    height: 82.14285714285714%;
		    left: 0%;
		    top: 0%;
		    z-index: 0;
		    position: absolute;
  	}
  	.swiper-slide-active div.first-main-heart-div.animation{
  			-webkit-animation: page-1-heart-route 3s 1s infinite both;
		    -moz-animation: page-1-heart-route 3s 1s infinite both;
		    animation: page-1-heart-route 3s 1s infinite both;
  	}
  	div.first-main-heart-div{
  		width: 2.5rem;
  		height: 2.5rem;
  		position: absolute;
  		right: 12%;
  		bottom: 12%;
  	}
  	img{
  		height: 100%;width: 100%;
  	}
    </style>
</head>
<body>
    <!-- Swiper -->
    <div class="swiper-container">
        <div class="swiper-wrapper">
            <div class="swiper-slide" id="page-0">
            	<div class="first-main-img-div first-main-img-div-animation">
            		<img alt="" src="/images/fist-page-img.jpg">
            	</div>
            	<div class="first-main-img-cover-div">
            		<img src="/images/first-page-back.png"/>
            	</div>
            	<div class="left-o" >
            	<img src="/images/face-left-side.png"/></div>
            	<div class="first-main-heart-div animation">
            		<img src="/images/heart.png"/></div>
            </div>
            <div class="swiper-slide" id="page-1"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div>2</div>
            <div class="swiper-slide" id="page-2"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 3</div>
            <div class="swiper-slide" id="page-3"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 4</div>
            <div class="swiper-slide" id="page-4"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 5</div>
            <div class="swiper-slide" id="page-5"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 6</div>
            <div class="swiper-slide" id="page-6"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 7</div>
            <div class="swiper-slide" id="page-7"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 8</div>
            <div class="swiper-slide" id="page-8"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 9</div>
            <div class="swiper-slide" id="page-9"><div class="left-o" >
            	<img src="/images/face-left-side.png" style="width: 100%;height: 100%;"/></div> 10</div>
        </div>
        <!-- Add Pagination -->
        <div class="swiper-pagination"></div>
    </div>

    <!-- Swiper JS -->
    <script src="/libs/jquery/jquery-1.11.2.min.js"></script>
    <script src="/libs/swaper/js/swiper.min.js"></script>
	<script src="/libs/swaper/js/swiper.jquery.min.js"></script>
    <!-- Initialize Swiper -->
    <script>
    $(function(){
    	var swiper = new Swiper('.swiper-container', {
            direction: 'vertical',
            slidesPerView: 1,
            spaceBetween: 30,
            mousewheelControl: true,
            loop:true,
            autoplay: 20000,
            onSlideNextEnd: function(swiper){
            	var index=swiper.activeIndex;
            	//$('#page-'+index).append($('#face-left'));
            }
        });
    });
    
    </script>
</body>
</html>
